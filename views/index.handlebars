<div class="container">
    <div class="row">
        <div class="col s12">
            <img src="assets/img/burger3.png" class=" burger-img responsive-img" style="width:360px;height:280px;" alt="burger">
            {{!-- <h2 class=" title center-align">Eat-Da-Burger!</h2> --}}
        </div>
    </div>

    <div class="row">
        <div class="col s6">
            {{#each burgers}}
            {{#unless devoured}}
            <div class="row">
                <div class="col s12">
                    {{> burgers/burger-block devoured=false}}

                </div>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col s6">
            {{#each burgers}}
            {{#if devoured}}
            <div class="row">
            <div class="col s12">
                {{> burgers/burger-block devoured=true}}
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>


<form class="create-form">
    <div class="row">
        <div class="input-field col s12">
            <textarea type="text" name="name" id="textarea1" class="materialize-textarea"></textarea>
            <label for="textarea1 text-black">Enter a burger you want to eat and click submit!</label>
        </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit">Submit
        <i class="material-icons right">send</i>
    </button>
</form>
</div>












</div>
